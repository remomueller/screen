<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for(@event, html: { class: 'form-horizontal' }) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :patient_id, class: 'control-label' %>
    <div class="controls">
      <%= f.select :patient_id, options_for_select([['---', nil]] + Patient.current.collect{|p| [p.code, p.id]}, @event.patient_id) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :class_name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :class_name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :class_id, class: 'control-label' %>
    <div class="controls">
      <%= f.number_field :class_id %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
