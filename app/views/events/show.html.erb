<% @title = "Event: #{@event.name}" %>
<h1><%= @title %></h1>

<% if current_user.screener? %> <%# current_user.all_events.include?(@event) %>
  <%= link_to image_tag('gentleface/16/doc_edit.png', alt: '') + "Edit Event", edit_event_path(@event), class: 'button' %>
  <%= link_to image_tag('gentleface/16/doc_delete.png', alt: '') + "Delete Event", @event, confirm: "Are you sure you want to delete Event #{@event.name}?", method: :delete, class: 'button negative' %>
<% end %>
<%= link_to image_tag('gentleface/16/folder_open.png', alt: '') + "View All Events", events_path, class: 'button' %>
<div style="clear:both"></div>

<fieldset>
  <legend><%= image_tag "gentleface/16/#{@event.image}.png", alt: '', style: 'vertical-align:text-bottom' %> Event</legend>

  <p>
    <b>Patient:</b>
    <%= link_to @event.patient.mrn, @event.patient if @event.patient %>
  </p>

  <p>
    <b>Name:</b>
    <%= @event.name %>
  </p>

  <p>
    <b>Time:</b>
    <%= simple_time(@event.event_time) %>
  </p>

  <p>
    <b>Event Details:</b>
    <%= e = @event.class_name.constantize.find_by_id(@event.class_id); link_to(@event.class_name, e) %>
  </p>
</fieldset>
