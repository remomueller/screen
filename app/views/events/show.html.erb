<% @title = "Event: #{@event.name}" %>
<div class="page-header">
  <h1>
    <%= @title %>
    <% if current_user.screener? or current_user.subject_handler? %>
      <%= link_to "Edit Event", edit_event_path(@event), class: 'btn btn-mini' %>
      <%= link_to "Delete Event", @event, confirm: "Are you sure you want to delete Event #{@event.name}?", method: :delete, class: 'btn btn-mini btn-danger' %>
    <% end %>
    <%= link_to "View Events", events_path, class: 'btn btn-mini' %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>Patient</dt>
  <dd><%= link_to @event.patient.phi_code(current_user), @event.patient if @event.patient %></dd>

  <dt>Name</dt>
  <dd><%= @event.name %></dd>

  <dt>Time</dt>
  <dd><%= simple_time(@event.event_time) %></dd>

  <dt>Event Details</dt>
  <dd><%= e = @event.class_name.constantize.find_by_id(@event.class_id); link_to(@event.class_name, e) %></dd>
</dl>
