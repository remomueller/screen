<% @title = 'Events' %>
<h1><%= @title %></h1>

<%= form_tag events_path, method: :get, remote: true, id: "events_search", style: "margin-bottom:-5px" do %>
  Search <%= text_field_tag 'mrn', params[:mrn] %> <%#= information %>
<% end %>

<div id="events"><div style="clear:both"></div><br /><center><%= image_tag "ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#events_search").attr("action"), $("#events_search").serialize(), null, "script");
  });
<% end %>
