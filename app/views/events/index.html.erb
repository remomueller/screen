<% @title = 'Events' %>
<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_tag events_path, method: :get, remote: true, id: "events_search", class: 'form-search' do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'mrn', params[:mrn], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="events"><center><%= image_tag "ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#events_search").attr("action"), $("#events_search").serialize(), null, "script");
  });
<% end %>
