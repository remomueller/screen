<% @title = "Clinic: #{@clinic.name}" %>
<div class="page-header">
  <h1>
    <%= @title %>
    <% if current_user.screener? %>
      <%= link_to "Edit Clinic", edit_clinic_path(@clinic), class: 'btn btn-mini' %>
      <%= link_to "Delete Clinic", @clinic, confirm: "Are you sure you want to delete Clinic #{@clinic.name}?", method: :delete, class: 'btn btn-mini btn-danger' %>
    <% end %>
    <%= link_to "View Clinics", clinics_path, class: 'btn btn-mini' %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>Status</dt>
  <dd><%= @clinic.status %></dd>
</dl>
