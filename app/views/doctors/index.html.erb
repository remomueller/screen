<% @title = 'Doctors' %>
<h1><%= @title %></h1>

<%#= link_to image_tag('gentleface/16/doc_new.png', alt: '') + "Create New Doctor", new_doctor_path, class: 'button positive' %>

<%= form_tag doctors_path, method: :get, remote: true, id: "doctors_search", style: "margin-bottom:-5px" do %>
  <%= hidden_field_tag :order %>
  Search <%= text_field_tag 'search', params[:search] %>
<% end %>

<div id="doctors"><div style="clear:both"></div><br /><center><%= image_tag "ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#doctors_search").attr("action"), $("#doctors_search").serialize(), null, "script");
  });
<% end %>
