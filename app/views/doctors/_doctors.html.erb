<%= render partial: 'layouts/per_page', locals: { object_count: @doctors.total_count, type: 'doctors', per_page: 40 } %>

<table class="table table-striped" style="table-layout:fixed">
  <thead>
    <tr>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, "doctors.name", "Name", 'doctors_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, "doctors.doctor_type", "Type", 'doctors_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, "doctors.status", "Status", 'doctors_search') %></th>
    </tr>
  </thead>

  <% @doctors.each do |doctor| %>
    <tr class="<%= 'error' if doctor.status == 'blacklist' %>">
      <td><%= link_to doctor.name, doctor %></td>
      <td><%= doctor.doctor_type %></td>
      <td><%= doctor.status %></td>
    </tr>
  <% end %>
</table>


<center><%= paginate @doctors, theme: "contour" %></center>
