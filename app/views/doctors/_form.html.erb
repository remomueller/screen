<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for(@doctor, html: { class: 'form-horizontal' }) do |f| %>
  <% if @doctor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@doctor.errors.count, "error") %> prohibited this doctor from being saved:</h2>

      <ul>
      <% @doctor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :doctor_type, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :doctor_type %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :status, class: 'control-label' %>
    <div class="controls">
      <%= f.select :status, [['---', nil],['Whitelist', 'whitelist'],['Blacklist', 'blacklist']] %>
      <span class="muted">NOTE: BLACKLISTING will DELETE all associated PRESCREENS</span>
    </div>
  </div>

  <div class="form-actions">
    <% form_name = @doctor.new_record? ? 'new_doctor' : "edit_doctor_#{@doctor.id}" %>
    <%= link_to_function (@doctor.new_record? ? "Create Doctor" : "Update Doctor"), "$('##{form_name}').submit();", class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
