<% @title = "Doctor: #{@doctor.name}" %>
<div class="page-header">
  <h1>
    <%= @title %>
    <% if current_user.screener? %>
      <%= link_to "Edit Doctor", edit_doctor_path(@doctor), class: 'btn btn-mini' %>
      <%= link_to "Delete Doctor", @doctor, confirm: "Are you sure you want to delete Doctor #{@doctor.name}?", method: :delete, class: 'btn btn-mini btn-danger' %>
    <% end %>
    <%= link_to "View Doctors", doctors_path, class: 'btn btn-mini' %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>Type</dt>
  <dd><%= @doctor.doctor_type %></dd>

  <dt>Status</dt>
  <dd><%= @doctor.status %></dd>
</dl>
