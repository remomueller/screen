<% @title = "Doctor: #{@doctor.name}" %>
<h1><%= @title %></h1>

<% if current_user.screener? %> <%# current_user.all_doctors.include?(@doctor) %>
  <%= link_to image_tag('gentleface/16/doc_edit.png', alt: '') + "Edit Doctor", edit_doctor_path(@doctor), class: 'btn' %>
  <%= link_to image_tag('gentleface/16/doc_delete.png', alt: '') + "Delete Doctor", @doctor, confirm: "Are you sure you want to delete Doctor #{@doctor.name}?", method: :delete, class: 'btn btn-danger' %>
<% end %>
<%= link_to image_tag('gentleface/16/folder_open.png', alt: '') + "View Doctors", doctors_path, class: 'btn' %>
<div style="clear:both"></div>

<fieldset>
  <legend><%= image_tag "gentleface/16/contact_card.png", alt: '', style: 'vertical-align:text-bottom' %> Doctor</legend>

  <p>
    <b>Type:</b>
    <%= @doctor.doctor_type %>
  </p>

  <p>
    <b>Status:</b>
    <%= @doctor.status %>
  </p>
</fieldset>
