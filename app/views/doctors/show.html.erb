<% @title = @doctor.name %>
<div class="page-header">
  <h1>
    <%= link_to 'Doctors', doctors_path %> &middot; <%= @title %>
  </h1>
  <% if current_user.screener? %>
    <%= link_to "Edit Doctor", edit_doctor_path(@doctor), class: 'btn btn-xs btn-default' %>
    <%= link_to "Delete Doctor", @doctor, method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Doctor #{@doctor.name}?" } %>
  <% end %>
</div>

<dl class="dl-horizontal">
  <dt>Type</dt>
  <dd><%= @doctor.doctor_type %></dd>

  <dt>Status</dt>
  <dd><%= @doctor.status %></dd>
</dl>
