<% @title = "User: #{@user.name}" %>
<h1><%= @title %></h1>

<% if current_user.system_admin? %>
  <%= link_to image_tag('gentleface/16/doc_edit.png', alt: '') + "Edit User", edit_user_path(@user), class: 'btn' %>
  <%= link_to image_tag('gentleface/16/doc_delete.png', alt: '') + 'Delete User', @user, confirm: "Are you sure you want to delete User #{@user.name}?", method: :delete, class: 'btn btn-danger' unless current_user == @user %>
  <%= link_to image_tag('gentleface/16/folder_open.png', alt: '') + "View All Users", users_path, class: 'btn' %>
<% end %>

<div style="clear:both"></div>
<fieldset>
  <br />

  <p>
    <b>Email:</b>
    <%= @user.email %>
  </p>

  <% if current_user.system_admin? %>
    <p>
      <b>Status:</b>
      <%= @user.status %>
    </p>

    <p>
      <b>System Admin:</b>
      <%= @user.system_admin? %>
    </p>

    <p>
      <b>Screener:</b>
      <%= @user.screener? %>
    </p>

    <p>
      <b>Subject Handler:</b>
      <%= @user.subject_handler? %>
    </p>

  <% end %>
</fieldset>
