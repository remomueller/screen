<% @title = "Visit #{@visit.name}" %>
<div class="page-header">
  <h1>
    <%= @title %>
    <% if current_user.screener? or current_user.subject_handler? %>
      <%= link_to "Edit Visit", edit_visit_path(@visit), class: 'btn btn-mini' %>
      <%= link_to "Delete Visit", @visit, confirm: "Are you sure you want to delete Visit #{@visit.name}?", method: :delete, class: 'btn btn-mini btn-danger' %>
    <% end %>
    <%= link_to "View Visits", visits_path, class: 'btn btn-mini' %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>Patient</dt>
  <dd><%= link_to @visit.patient.phi_code(current_user), @visit.patient if @visit.patient %></dd>

  <dt>Visit type</dt>
  <dd><%= @visit.visit_type_name %></dd>

  <dt>Visit date</dt>
  <dd><%= simple_date @visit.visit_date %></dd>

  <dt>Outcome</dt>
  <dd><%= @visit.outcome_name %></dd>

  <dt>Comments</dt>
  <dd><%= @visit.comments %></dd>
</dl>
