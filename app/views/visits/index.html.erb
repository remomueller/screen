<% @title = 'Visits' %>
<h1><%= @title %></h1>

<%= form_tag visits_path, method: :get, remote: true, id: "visits_search", style: "margin-bottom:-5px" do %>
  <%= hidden_field_tag :order %>
  Search <%= text_field_tag 'mrn', params[:mrn] %> <%#= information %>
<% end %>

<div id="visits"><div style="clear:both"></div><br /><center><%= image_tag "ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#visits_search").attr("action"), $("#visits_search").serialize(), null, "script");
  });
<% end %>
