<% @title = "Prescreen #{@prescreen.name}" %>
<div class="page-header">
  <h1>
    <%= @title %>
    <% if current_user.screener? or current_user.subject_handler? %>
      <%= link_to "Edit Prescreen", edit_prescreen_path(@prescreen), class: 'btn btn-mini' %>
      <%= link_to "Delete Prescreen", @prescreen, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: "Are you sure you want to delete Prescreen #{@prescreen.name}?" } %>
    <% end %>
    <%= link_to "View Prescreens", prescreens_path, class: 'btn btn-mini' %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>Patient</dt>
  <dd><%= link_to @prescreen.patient.phi_code(current_user), @prescreen.patient if @prescreen.patient %></dd>

  <dt>Clinic</dt>
  <dd><%= @prescreen.clinic.name %></dd>

  <dt>Cardiologist</dt>
  <dd><%= @prescreen.doctor.name %></dd>

  <dt>Visit at</dt>
  <dd><%= simple_time(@prescreen.visit_at) %></dd>

  <dt>Visit duration</dt>
  <dd><%= @prescreen.visit_duration %></dd>

  <dt>Visit units</dt>
  <dd><%= @prescreen.visit_units %></dd>

  <dt>Eligibility</dt>
  <dd><%= @prescreen.eligibility %></dd>

  <dt>Exclusion</dt>
  <dd><%= @prescreen.exclusion_name %></dd>

  <dt>Risk factors</dt>
  <dd>
    <ul>
      <% @prescreen.risk_factors.each do |choice| %>
        <li><%= @choice = choice; render partial: 'choices/show' %> <%= choice.description %></li>
      <% end %>
    </ul>
  </dd>

</dl>
