<%= form_for(@patient) do |f| %>
  <% if @patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
      <% @patient.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <legend><%= @title %></legend>
    <div class="field">
      <%= f.label :mrn, 'MRN' %><br />
      <%= f.text_field :mrn %>
    </div>
    <div class="field">
      <%= f.label :subject_code %><br />
      <%= f.text_field :subject_code %>
    </div>
    <div class="field">
      <%= f.label :name_code %><br />
      <%= f.text_field :name_code %>
    </div>
    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name %>
    </div>
    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name %>
    </div>
    <div class="field">
      <%= f.label :phone_home, 'Home Phone' %><br />
      <%= f.text_field :phone_home %>
    </div>
    <div class="field">
      <%= f.label :phone_day, 'Day Phone' %><br />
      <%= f.text_field :phone_day %>
    </div>
    <div class="field">
      <%= f.label :phone_alt, 'Alt Phone' %><br />
      <%= f.text_field :phone_alt %>
    </div>
    <div class="field">
      <%= f.label :sex %><br />
      <%= f.text_field :sex %>
    </div>
    <div class="field">
      <%= f.label :age %><br />
      <%= f.number_field :age, { min: 0 } %>
    </div>
    <div class="field">
      <%= f.label :address1 %><br />
      <%= f.text_field :address1 %>
    </div>

    <div class="field">
      <%= f.label :city %><br />
      <%= f.text_field :city %>
    </div>
    <div class="field">
      <%= f.label :state %><br />
      <%= f.text_field :state %>
    </div>
    <div class="field">
      <%= f.label :zip %><br />
      <%= f.text_field :zip %>
    </div>
  </fieldset>

  <div class="actions">
    <% form_name = @patient.new_record? ? 'new_patient' : "edit_patient_#{@patient.id}" %>
    <%= link_to_function image_tag('gentleface/16/checkmark.png', alt: '') + (@patient.new_record? ? "Create Patient" : "Update Patient"), "$('##{form_name}').submit();", class: "button positive" %>
    <%= cancel %>
    <br />
  </div>
<% end %>
