<div style="float:right">
  Per Page
  <span class="per_page">
    20
  </span>
</div>

<div style="clear:both"></div>

<% items = [['mrn', 'MRN'], ['subject_code', 'Subject Code'], ['first_name', 'First Name'], ['last_name', 'Last Name'], ['phone_home', 'Home Phone'], ['phone_day', 'Day Phone'], ['phone_alt', 'Alt Phone'], ['sex', 'Sex'], ['age', 'Age']] %>

<div class="frame">
  <table style="width:100%;table-layout:fixed">
    <tr>
      <th>Latest Event</th>
      <% items.each do |item, name| %>
        <th style="white-space:nowrap"><%== sort_field_helper(@order, "patients.#{item}", name, 'patients_search') %></th>
      <% end %>
      <th></th>
    </tr>

  <% @patients.each do |patient| %>
    <tr onmouseover="$('.patient_<%= patient.id %>_short').hide();$('.patient_<%= patient.id %>').show();" onmouseout="$('.patient_<%= patient.id %>').hide();$('.patient_<%= patient.id %>_short').show();">
      <td style="white-space:nowrap;overflow:hidden">
        <% event = patient.events.order('event_time DESC').first %>
        <%= image_tag "gentleface/16/#{event.image}.png", alt: '', style: 'vertical-align:text-bottom' if event %>
        <%= link_to(event.name, event.class_name.constantize.find_by_id(event.class_id)) if event %>
      </td>
      <% items.each do |item, name| %>
        <td><span class="patient_<%= patient.id %>_short"><%= patient.send(item).to_s[0..1] %></span><span class="patient_<%= patient.id %>" style="display:none"><%= link_to_if ['mrn', 'subject_code'].include?(item), patient.send(item), patient %></span></td>
      <% end %>
      <td><%= @patient = patient; render partial: 'patients/statistics' %></td>
    </tr>
  <% end %>
  </table>
</div>

<center><%= paginate @patients %></center>
