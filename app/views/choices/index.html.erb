<% @title = 'Choices' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%#= link_to "Create Choice", new_choice_path, class: 'btn btn-primary' %>
  </h1>
</div>

<%= form_tag choices_path, method: :get, remote: true, id: "choices_search", class: 'form-search' do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="choices"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#choices_search").attr("action"), $("#choices_search").serialize(), null, "script");
  });
<% end %>
