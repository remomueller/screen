<%= render partial: 'contour/layouts/per_page', locals: { per_page: 40, object_count: @choices.total_count } %>

<table class="table table-striped" style="table-layout:fixed">
  <thead>
    <tr>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, "choices.category", "Category") %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, "choices.name", "Name") %></th>
      <th>Description</th>
      <th>Included Fields</th>
      <th>Color</th>
    </tr>
  </thead>

  <% @choices.each do |choice| %>
    <tr>
      <td><%= choice.category %></td>
      <td><%= link_to choice.name, choice %></td>
      <td><%= choice.description %></td>
      <td><%= choice.fields.join(', ') %></td>
      <td><span class="label" style="background-color: <%= choice.color %>"><%= choice.color %></span></td>
    </tr>
  <% end %>
</table>

<center><%= paginate @choices, theme: "contour" %></center>
