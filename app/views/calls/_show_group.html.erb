<% if TASK_TRACKER_URL.blank? %>
  <%# Render blank (different from nothing) %>
<% elsif current_user.task_tracker_screen_token.blank? or @group.blank? %>
  <div class="control-group">
    <%= label :task_tracker_screen_token, 'Task Tracker Token', class: 'control-label' %>
    <div class="controls">
      <%= text_field_tag "task_tracker_screen_token", '', style: "width:99%" %>
      <%= link_to 'Update My Screen Token', '#', class: 'btn btn-mini btn-primary', data: { object: 'screen-token-update', target: "#group_#{@call.tt_group_id}_call_form" } %>
      <small>Please enter your Task Tracker Screen Token: <%= link_to TASK_TRACKER_URL + "/settings#screen_token", TASK_TRACKER_URL + "/settings#screen_token", target: '_blank' %></small>
    </div>
  </div>
<% else %>
  <div class="page-header">
    <h2>Group <%= link_to @group['id'], @group['group_link'], target: '_blank' %></h2>
  </div>

  <dl class="dl-horizontal">

    <dt>Creator</dt>
    <dd><%= @group['creator_name'] %></dd>

    <dt>Template</dt>
    <dd><%= @group['template']['name'] if @group['template'] %></dd>

    <dt>Description</dt>
    <dd><%= simple_format @group['description'] %></dd>

    <dt>Stickies</dt>
    <dd>
      <table class="table table-striped table-condensed table-bordered" style="width:100%;background-color:transparent">
        <thead>
          <tr>
            <th style="text-align:left">Sticky</th>
            <th style="text-align:left">Due Date</th>
          </tr>
        </thead>
        <% (@group['stickies'] || []).each do |sticky| %>
          <tr>
            <td>
              <% if sticky['completed'] %>
                <%= image_tag("gentleface/16/checkmark.png", alt: '', size: '10x10') %> <span style="text-decoration:line-through"><%= sticky['id'] %></span>
              <% else %>
                <%= sticky['id'] %>
              <% end %>
              <%= simple_format sticky['description'] %>
            </td>
            <td><%= simple_date Time.parse(sticky['due_date']) rescue '' %></td>
          </tr>
        <% end %>
      </table>
    </dd>
  </dl>
<% end %>
