<% @title = 'Calls' %>
<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_tag calls_path, method: :get, remote: true, id: "calls_search", style: "margin-bottom:-5px", class: 'form-search' do %>
  <%= hidden_field_tag :order %>
  <fieldset>
    <legend>
      Search Filters
    </legend>
    <table class="blank padded" style="table-layout:fixed;width:100%;text-align:left;margin:10px 0px">
      <thead>
        <tr>
          <th>Search</th>
          <th>Call Date After</th>
          <th>Call Date Before</th>
          <th>Eligibility</th>
          <th>User</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= text_field_tag 'mrn', params[:mrn] %></td>
          <td><%= text_field_tag 'call_after', params[:call_after], class: 'datepicker' %></td>
          <td><%= text_field_tag 'call_before', params[:call_before], class: 'datepicker' %></td>
          <td><%= select_tag 'eligibility', options_for_select(Call::ELIGIBILITY, params[:eligibility]) %></td>
          <td><%= select_tag 'user_id', options_for_select([['---', nil]] + User.current.with_call.collect{|u| [u.name, u.id]}, params[:user_id]) %></td>
        </tr>
      </tbody>
    </table>
    <%= submit_tag 'Filter Search', class: 'btn btn-primary' %>
  </fieldset>
<% end %>

<div id="calls"><div style="clear:both"></div><br /><center><%= image_tag "ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#calls_search").attr("action"), $("#calls_search").serialize(), null, "script");
  });
<% end %>
