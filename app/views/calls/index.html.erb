<% @title = 'Calls' %>
<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_tag calls_path, method: :get, remote: true, id: "calls_search", class: 'form-vertical', data: { object: 'form-load' } do %>
  <%= hidden_field_tag :order %>

  <div class="row">
    <div class="col-md-4 form-group">
      <%= label :mrn, 'Search', class: 'col-md-2 control-label' %>
      <div class="col-md-10">
        <%= text_field_tag :mrn, params[:mrn] %>
      </div>
    </div>
    <div class="col-md-4 form-group">
      <%= label :call_after, 'Call Date After', class: 'col-md-2 control-label' %>
      <div class="col-md-10">
        <%= text_field_tag :call_after, params[:call_after], class: 'datepicker form-control' %>
      </div>
    </div>

    <div class="col-md-4 form-group">
      <%= label :call_before, 'Call Date Before', class: 'col-md-2 control-label' %>
      <div class="col-md-10">
        <%= text_field_tag :call_before, params[:call_before], class: 'datepicker form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 form-group">
      <%= label :eligibility, 'Eligibility', class: 'col-md-2 control-label' %>
      <div class="col-md-10">
        <%= select_tag :eligibility, options_for_select(Call::ELIGIBILITY, params[:eligibility]) %>
      </div>
    </div>

    <div class="col-md-4 form-group">
      <%= label :user_id, 'Creator', class: 'col-md-2 control-label' %>
      <div class="col-md-10">
        <%= select_tag 'user_id', options_for_select([['---', nil]] + User.current.with_call.collect{|u| [u.name, u.id]}, params[:user_id]) %>
      </div>
    </div>

    <div class="col-md-4 form-group">
      <%= label :response_id, 'Response', class: 'col-md-2 control-label' %>
      <div class="col-md-10">
        <%= select_tag :response_id, options_for_select([['---', nil]] + Choice.where(category: 'call response').collect{|c| [c.name, c.id]}, params[:response_id]) %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= submit_tag 'Filter Search', class: 'btn btn-primary' %>
      <%= link_to 'Export CSV', '#', class: 'btn btn-default', data: { target: '#calls_search', object: 'export', format: 'csv' } %>
    </div>
  </div>
<% end %>

<div id="calls"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>
