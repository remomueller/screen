<% @title = "Call #{@call.name}" %>
<div class="page-header">
  <h1>
    <%= link_to 'Calls', calls_path %> &middot; <%= link_to @call.patient.phi_code(current_user), @call.patient %> &middot; <%= @title %>
  </h1>
  <% if current_user.screener? or current_user.subject_handler? %>
    <%= link_to "Edit Call", edit_call_path(@call), class: 'btn btn-xs btn-default' %>
    <%= link_to "Delete Call", @call, method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Call #{@call.name}?" } %>
  <% end %>
</div>

<dl class="dl-horizontal">
  <dt>Creator</dt>
  <dd><%= @call.user.name %></dd>

  <dt>Response</dt>
  <dd><%= @call.response_name %></dd>

  <dt>Call type</dt>
  <dd><%= @call.call_type_name %> <%= @call.direction %></dd>

  <dt>Call time</dt>
  <dd><%= simple_time @call.call_time %></dd>

  <dt>Berlin</dt>
  <dd><%= @call.berlin %></dd>

  <dt>ESS</dt>
  <dd><%= @call.ess %></dd>

  <dt>Eligibility</dt>
  <dd><%= @call.eligibility %></dd>

  <dt>Exclusion</dt>
  <dd><%= @call.exclusion_name %></dd>

  <dt>Participation</dt>
  <dd><%= @call.participation_name %></dd>

  <dt>Comments</dt>
  <dd><%= @call.comments %></dd>
</dl>
