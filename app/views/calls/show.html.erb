<% @title = "Call: #{@call.name}" %>
<h1><%= @title %></h1>

<% if current_user.screener? or current_user.subject_handler? %> <%# current_user.all_calls.include?(@call) %>
  <%= link_to image_tag('gentleface/16/doc_edit.png', alt: '') + "Edit Call", edit_call_path(@call), class: 'button' %>
  <%= link_to image_tag('gentleface/16/doc_delete.png', alt: '') + "Delete Call", @call, confirm: "Are you sure you want to delete Call #{@call.name}?", method: :delete, class: 'button negative' %>
<% end %>
<%= link_to image_tag('gentleface/16/folder_open.png', alt: '') + "View All Calls", calls_path, class: 'button' %>
<div style="clear:both"></div>

<fieldset>
  <legend><%= image_tag "gentleface/16/phone_1.png", alt: '', style: 'vertical-align:text-bottom' %> Call</legend>
  <p>
    <b>Patient:</b>
    <%= link_to @call.patient.code, @call.patient if @call.patient %>
  </p>

  <p>
    <b>Response:</b>
    <%= @call.response_name %>
  </p>

  <p>
    <b>Call type:</b>
    <%= @call.call_type_name %> <%= @call.direction %>
  </p>

  <p>
    <b>Call time:</b>
    <%= simple_time @call.call_time %>
  </p>

  <p>
    <b>Berlin:</b>
    <%= @call.berlin %>
  </p>

  <p>
    <b>ESS:</b>
    <%= @call.ess %>
  </p>

  <p>
    <b>Eligibility:</b>
    <%= @call.eligibility %>
  </p>

  <p>
    <b>Exclusion:</b>
    <%= @call.exclusion_name %>
  </p>

  <p>
    <b>Participation:</b>
    <%= @call.participation_name %>
  </p>

  <p>
    <b>Comments:</b>
    <%= @call.comments %>
  </p>

  <% unless @call.tt_group_id.blank? %>
    <div id="show_group">
      <%= image_tag "ajax-loader.gif" %>
    </div>

    <%= form_tag show_group_call_path(@call), method: :post, remote: true, style: 'display:inline', id: 'group_call_form' do %>
      <%= hidden_field_tag 'screen_token', '' %>
    <% end %>

    <%= javascript_tag do %>
      $(function(){
        $.post($("#group_call_form").attr("action"), $("#group_call_form").serialize(), null, "script");
      });
    <% end %>
  <% end %>
</fieldset>
