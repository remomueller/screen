<% @title = "Evaluation: #{@evaluation.name}" %>
<div class="page-header">
  <h1>
    <%= @title %>
    <% if current_user.screener? or current_user.subject_handler? %>
      <%= link_to "Edit Evaluation", edit_evaluation_path(@evaluation), class: 'btn btn-mini' %>
      <%= link_to "Delete Evaluation", @evaluation, confirm: "Are you sure you want to delete Evaluation #{@evaluation.name}?", method: :delete, class: 'btn btn-mini btn-danger' %>
    <% end %>
    <%= link_to "View Evaluations", evaluations_path, class: 'btn btn-mini' %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>Patient</dt>
  <dd><%= link_to @evaluation.patient.code, @evaluation.patient if @evaluation.patient %></dd>

  <dt>Administration type</dt>
  <dd>
    <%= @evaluation.evaluation_type_name %>
    <%= @evaluation.administration_type_name %>
  </dd>

  <dt>Source</dt>
  <dd><%= @evaluation.source %></dd>

  <dt>Embletta unit number</dt>
  <dd><%= @evaluation.embletta_unit_number %></dd>

  <dt>Administration date</dt>
  <dd><%= simple_date @evaluation.administration_date %></dd>

  <dt>Expected receipt date</dt>
  <dd><%= simple_date @evaluation.expected_receipt_date %></dd>

  <dt>Receipt date</dt>
  <dd><%= simple_date @evaluation.receipt_date %></dd>

  <dt>Storage date</dt>
  <dd><%= simple_date @evaluation.storage_date %></dd>

  <dt>Subject notified</dt>
  <dd><%= check_box_tag 'evaluation', 'subject_notified', @evaluation.subject_notified?, disabled: true %></dd>

  <dt>Reimbursement form date</dt>
  <dd><%= simple_date @evaluation.reimbursement_form_date %></dd>

  <dt>Scored date</dt>
  <dd><%= simple_date @evaluation.scored_date %></dd>

  <dt>AHI</dt>
  <dd><%= @evaluation.ahi %></dd>

  <dt>Eligibility</dt>
  <dd><%= @evaluation.eligibility %></dd>

  <dt>Exclusion</dt>
  <dd><%= @evaluation.exclusion_name %></dd>

  <dt>Status</dt>
  <dd><%= @evaluation.status %></dd>

  <dt>Comments</dt>
  <dd><%= @evaluation.comments %></dd>
</dl>
