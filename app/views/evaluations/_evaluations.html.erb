<div style="float:right;text-align:right">
  Per Page
  <span class="per_page">20</span><br />
  <%= "<b>Displaying #{@evaluations.count} of #{@evaluation_count}</b>".html_safe if @evaluation_count %>
</div>

<div style="clear:both"></div>

<div class="frame">
  <table style="width:100%">
    <tr>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, "evaluations.patient_id", 'Patient', 'evaluations_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, "evaluations.administration_type", 'Administration type', 'evaluations_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, "evaluations.embletta_unit_number", 'Embletta unit number', 'evaluations_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, "evaluations.administration_date", 'Administration date', 'evaluations_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, "evaluations.receipt_date", 'Receipt date', 'evaluations_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, "evaluations.scored_date", 'Scored date', 'evaluations_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, "evaluations.ahi", 'AHI', 'evaluations_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, "evaluations.eligibility", 'Eligibility', 'evaluations_search') %></th>
    </tr>

  <% @evaluations.each do |evaluation| %>
    <tr>
      <td><%= link_to evaluation.patient.code, evaluation.patient if evaluation.patient %></td>
      <td><%= link_to evaluation.administration_type_name + " " + evaluation.evaluation_type_name, evaluation %></td>
      <td><%= evaluation.embletta_unit_number %></td>
      <td><%= simple_date evaluation.administration_date %></td>
      <td><%= simple_date evaluation.receipt_date %></td>
      <td><%= simple_date evaluation.scored_date %></td>
      <td><%= evaluation.ahi %></td>
      <td><%= evaluation.eligibility %></td>
    </tr>
  <% end %>

  </table>
</div>

<center><%= paginate @evaluations %></center>
