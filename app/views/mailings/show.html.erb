<% @title = "Mailing #{@mailing.name}" %>
<div class="page-header">
  <h1>
    <%= link_to @mailing.patient.phi_code(current_user), @mailing.patient %> &middot; <%= @title %>
    <% if current_user.screener? or current_user.subject_handler? %>
      <%= link_to "Edit Mailing", edit_mailing_path(@mailing), class: 'btn btn-xs' %>
      <%= link_to "Delete Mailing", @mailing, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: "Are you sure you want to delete Mailing #{@mailing.name}?" } %>
    <% end %>
    <%= link_to "View Mailings", mailings_path, class: 'btn btn-xs' %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt><%= @mailing.doctor.doctor_type.titleize %></dt>
  <dd><%= link_to @mailing.doctor.name, @mailing.doctor %></dd>

  <dt>Sent date</dt>
  <dd><%= @mailing.sent_date %></dd>

  <dt>Response date</dt>
  <dd><%= @mailing.response_date %></dd>

  <dt>Berlin</dt>
  <dd><%= @mailing.berlin %></dd>

  <dt>ESS</dt>
  <dd><%= @mailing.ess %></dd>

  <dt>Eligibility</dt>
  <dd><%= @mailing.eligibility %></dd>

  <dt>Exclusion</dt>
  <dd><%= @mailing.exclusion_name %></dd>

  <dt>Participation</dt>
  <dd><%= @mailing.participation_name %></dd>

  <dt>Risk factors</dt>
  <dd>
    <ul>
      <% @mailing.risk_factors.each do |choice| %>
        <li><%= render partial: 'choices/show', locals: { choice: choice } %> <%= choice.description %></li>
      <% end %>
    </ul>
  </dd>

  <dt>Comments</dt>
  <dd><%= @mailing.comments %></dd>
</dl>
