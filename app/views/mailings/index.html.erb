<% @title = "Mailings" %>
<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_tag mailings_path, method: :get, id: "mailings_search", class: 'form-vertical' do %>
  <%= hidden_field_tag :order, params[:order] %>

  <div class="row">
    <div class="col-md-4 form-group">
      <%= label :mrn, 'Search', class: 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= text_field_tag :mrn, params[:mrn], class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-4 form-group">
      <%= label :sent_after, 'Sent Date After', class: 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= text_field_tag :sent_after, params[:sent_after], class: 'datepicker form-control' %>
      </div>
    </div>

    <div class="col-md-4 form-group">
      <%= label :sent_before, 'Sent Date Before', class: 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= text_field_tag :sent_before, params[:sent_before], class: 'datepicker form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 form-group">
      <%= label :eligibility, 'Eligibility', class: 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= select_tag :eligibility, options_for_select(Mailing::ELIGIBILITY, params[:eligibility] || 'potentially eligible'), class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-4 form-group">
      <%= label :response_after, 'Response Date After', class: 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= text_field_tag :response_after, params[:response_after], class: 'datepicker form-control' %>
      </div>
    </div>

    <div class="col-md-4 form-group">
      <%= label :response_before, 'Response Date Before', class: 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= text_field_tag :response_before, params[:response_before], class: 'datepicker form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 form-group">
      <div class="col-md-9">
        <div class="checkbox" style="margin-top:0px">
          <label><%= check_box_tag :ineligible, '1', params[:ineligible] %> Exclude Ineligible From Calls, Evaluations, or Prescreens</label>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= submit_tag 'Search', class: 'btn btn-primary', name: nil %>
      <%= link_to 'Reset', mailings_path, class: 'btn btn-default' %>
      <%= link_to 'Export Contact List', '#', class: 'btn btn-default', data: { target: '#mailings_search', object: 'export', format: 'originalcsv' } %>
      <%= link_to 'Export CSV', '#', class: 'btn btn-default', data: { target: '#mailings_search', object: 'export', format: 'csv' } %>
    </div>
  </div>
<% end %>

<%= render partial: 'mailings/mailings' %>
